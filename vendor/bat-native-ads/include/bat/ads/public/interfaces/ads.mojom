module ads.mojom;

enum Environment {
  STAGING = 0,
  PRODUCTION,
  DEVELOPMENT
};

enum AdNotificationEventType {
  kViewed = 0,
  kClicked,
  kDismissed,
  kTimedOut
};

enum UrlRequestMethod {
  GET = 0,
  PUT,
  POST
};

struct UrlRequest {
  string url;
  array<string> headers;
  string content;
  string content_type;
  UrlRequestMethod method;
};

struct UrlResponse {
  string url;
  int32 status_code;
  string body;
  map<string, string> headers;
};
